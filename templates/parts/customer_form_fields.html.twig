<label>First name
    <input type="text" name="firstName" required="required" value="{{ customer.firstName|default('') }}">
</label>
<br>
<label>Last name
    <input type="text" name="lastName" required="required" value="{{ customer.lastName|default('') }}">
</label>
<br>
<label>Age
    <input type="number" name="age" required="required" value="{{ customer.age|default(0) }}">
</label>
<br>
<label>SSN
    <input type="text" name="ssn" required="required" value="{{ customer.ssn|default('') }}">
</label>
<br>
<br>
<label>State
    <select name="state" required="required">
        {% for key, name in states %}
            <option value="{{ key }}" {% if customer.address.state is defined and customer.address.state == key %} selected {% endif %}>{{ name }}</option>
        {% endfor %}
    </select>
</label>
<br>
<label>City
    <input type="text" name="city" required="required" value="{{ customer.address.city|default('') }}">
</label>
<br>
<label>Address
    <input type="text" name="address" required="required" value="{{ customer.address.address|default('') }}">
</label>
<br>
<label>ZIP
    <input type="text" name="zip" required="required" value="{{ customer.address.zip|default('') }}">
</label>
<br>
<br>
<label>FICO
    <input type="number" name="fico" required="required" value="{{ customer.fico|default(0) }}">
</label>
<br>
<label>Monthly income
    <input type="number" name="income" required="required" value="{{ customer.income|default(0) }}">
</label>
<br>
<label>Email
    <input type="email" name="email" required="required" value="{{ customer.email|default('') }}">
</label>
<br>
<label>Phone
    <input type="tel" name="phoneNumber" required="required" value="{{ customer.phoneNumber|default(0) }}">
</label>
<br>
<br>
<button type="submit">Submit</button>
